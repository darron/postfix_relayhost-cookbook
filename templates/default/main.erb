###
# Generated by Chef for <%= node.name %>
# Configured as relayhost
###

biff = no
append_dot_mydomain = yes
smtpd_tls_cert_file=/etc/ssl/certs/ssl-cert-snakeoil.pem
smtpd_tls_key_file=/etc/ssl/private/ssl-cert-snakeoil.key
smtpd_use_tls=yes
smtpd_tls_session_cache_database = btree:${queue_directory}/smtpd_scache
smtp_tls_session_cache_database = btree:${queue_directory}/smtp_scache
smtp_sasl_auth_enable = yes
smtp_sasl_password_maps = static:<%= node['postfix']['sasl']['smtp_sasl_user_name'] %>:<%= node['postfix']['sasl']['smtp_sasl_passwd'] %>
smtp_sasl_security_options = <%= node['postfix']['main']['smtp_sasl_security_options'] %>
smtp_tls_CAfile = <%= node['postfix']['smtp_tls_CAfile'] %>
smtp_use_tls = <%= node['postfix']['smtp_use_tls'] %>
myhostname = <%= node.name %>
mydomain = <%= node['postfix']['domain_name'] %>
myorigin = $myhostname
smtpd_banner = $myhostname ESMTP $mail_name
alias_maps = hash:/etc/aliases
alias_database = hash:/etc/aliases
mydestination = <%= node.name %>, <%= node.name %>.<%= node['postfix']['domain_name'] %>, localhost.localdomain, localhost
relayhost = <%= node['postfix']['main']['relayhost'] %>
mynetworks = <%= node['postfix']['my_networks'] %>
inet_interfaces = all
mailbox_size_limit = 0
recipient_delimiter = +
